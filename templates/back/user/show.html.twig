{% extends 'layouts/' ~ data.layout ~ '.html.twig' %}

{% block title %}User
{% endblock %}

{% block main %}
	<div class="container">
		<div class="d-flex justify-content-between flex-wrap gap-3 mb-3">
			<a class="btn btn-secondary text-nowrap" href="{{ path('app_user_index') }}"><i class="bi bi-arrow-return-left me-1"></i> back to list</a>
			<a class="btn btn-primary text-nowrap" href="{{ path('app_user_edit', {'id': user.id}) }}">edit <i class="bi bi-pencil"></i></a>
		</div>
		<div class="overflow-auto border rounded">
			<table class="table table-hover mb-0">
				<thead>
					<tr>
						<th>Data</th>
						<th>Value</th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<th>Id</th>
						<td>{{ user.id }}</td>
					</tr>
					<tr>
						<th>Email</th>
						<td>{{ user.email }}</td>
					</tr>
					<tr>
						<th>Avatar</th>
						<td>
							<img src="{{ user.avatar }}" alt="avatar" class="img-thumbnail" style="max-width: 100px;">
						</td>
					</tr>
					<tr>
						<th>Roles</th>
						<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
					</tr>
					<tr>
						<th>Password</th>
						<td>{{ user.password }}</td>
					</tr>
					<tr>
						<th>CreatedAt</th>
						<td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
					</tr>
					<tr>
						<th>UpdatedAt</th>
						<td>{{ user.updatedAt ? user.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
					</tr>
					<tr>
						<th>Comments</th>
						<td>
							{% for comment in user.comments %}
								<a class="badge bg-light text-primary text-decoration-none" href="{{ path('app_comment_show', {id: comment.id}) }}">{{ comment.id }}</a
							{% endfor %}
						</td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
{% endblock %}
