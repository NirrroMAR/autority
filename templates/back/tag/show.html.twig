{% extends 'layouts/' ~ data.layout ~ '.html.twig' %}

{% block title %}Tag
{% endblock %}

{% block main %}
	<div class="container">
		<div class="d-flex justify-content-between flex-wrap gap-3 mb-3">
			<a class="btn btn-secondary text-nowrap" href="{{ path('app_tag_index') }}"><i class="bi bi-arrow-return-left me-1"></i> back to list</a>
			<a class="btn btn-primary text-nowrap" href="{{ path('app_tag_edit', {'id': tag.id}) }}">edit <i class="bi bi-pencil"></i></a>
		</div>
		<div class="overflow-auto border rounded">
			<table class="table table-hover mb-0">
				<thead>
					<tr>
						<th>Data</th>
						<th>Value</th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<th>Id</th>
						<td>{{ tag.id }}</td>
					</tr>
					<tr>
						<th>Name</th>
						<td>{{ tag.name }}</td>
					</tr>
					<tr>
						<th>Slug</th>
						<td>{{ tag.slug }}</td>
					</tr>
				</tbody>
			</table>
		</div>
        {# <div class="d-flex justify-content-end">
            {{ include('back/tag/_delete_form.html.twig') }}
        </div> #}
	</div>
{% endblock %}
