{% extends 'layouts/' ~ data.layout ~ '.html.twig' %}

{% block title %}Post
{% endblock %}

{% block main %}
	<div class="container">
		<div class="d-flex justify-content-between flex-wrap gap-3 mb-3">
			<a class="btn btn-secondary text-nowrap" href="{{ path('app_post_index') }}"><i class="bi bi-arrow-return-left me-1"></i> back to list</a>
			<a class="btn btn-primary text-nowrap" href="{{ path('app_post_edit', {'id': post.id}) }}">edit <i class="bi bi-pencil"></i></a>
		</div>
		<div class="overflow-auto border rounded">
			<table class="table table-hover mb-0">
				<tbody>
					<tr>
						<th>Id</th>
						<td>{{ post.id }}</td>
					</tr>
					<tr>
						<th>Slug</th>
						<td>{{ post.slug }}</td>
					</tr>
					<tr>
						<th>Title</th>
						<td>{{ post.title }}</td>
					</tr>
					<tr>
						<th>Autor</th>
						<td><a class="text-decoration-none text-secondary mx-1" href="{{ path('app_user_show', {id: post.author.id}) }}">{{post.author.email}}</a></td>
					</tr>
					<tr>
						<th>Content</th>
						<td>{{ post.content }}</td>
					</tr>
					<tr>
						<th>UpdatedAt</th>
						<td>{{ post.updatedAt ? post.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
					</tr>
					<tr>
						<th>CreatedAt</th>
						<td>{{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}</td>
					</tr>
				</tbody>
			</table>
		</div>
		{# <div class="d-flex justify-content-end">
			{{ include('back/post/_delete_form.html.twig') }}
		</div> #}
	</div>
{% endblock %}
