{% extends 'layouts/' ~ data.layout ~ '.html.twig' %}

{% block title %}Post index{% endblock %}

{% block main %}
<div class="container">
    <div class="d-flex flex-wrap justify-content-between gap-3 mb-3">
        <a class="btn btn-secondary text-nowrap" href="{{ path('app_back') }}"><i class="bi bi-arrow-return-left me-1"></i> back to dashboard</a>
        <div class="d-flex gap-2">
            <span class="btn btn-outline-dark disabled text-nowrap">countPosts: {{ countPosts }}</span>
            <a class="btn btn-success text-nowrap" href="{{ path('app_post_new') }}">create new <i class="bi bi-plus-circle ms-1"></i></a>
        </div>
    </div>

    <div class="overflow-auto border rounded">
        <table class="table table-hover mb-0">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Slug</th>
                    <th>Title</th>
                    <th>Content</th>
                    <th>UpdatedAt</th>
                    <th>CreatedAt</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for post in posts %}
                <tr>
                    <td>{{ post.id }}</td>
                    <td>{{ post.slug }}</td>
                    <td>{{ post.title }}</td>
                    <td>{{ post.content }}</td>
                    <td>{{ post.updatedAt ? post.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td>
                        <a class="text-decoration-none text-secondary mx-1" href="{{ path('app_post_show', {'id': post.id}) }}">show <i class="bi bi-eye"></i></a>
                        <a class="text-decoration-none mx-1" href="{{ path('app_post_edit', {'id': post.id}) }}">edit <i class="bi bi-pencil"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
